<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <style>
        body {
            font-size: 20px;
        }

        h1 {
            text-align: center;
        }

        .form_header {
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
        }

        .form {
            padding: 20px 20px 40px 20px;
            border: 1px solid grey;
            margin: 20px auto;
            border-radius: 7px;
            width: 30%;
        }

        .input_wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .input, .textarea {
            width: 100%;
            padding: 5px 5px;
            border-radius: 5px;
            border: 1px solid #bbb;
        }

        .input:focus, .textarea:focus {
            outline: none;
            border-radius: 5px;
            border: 1px solid #555;
        }

        .textarea {
            resize: vertical;
            min-height: 50px;
        }

        .submit_wrap {
            position: relative;
            padding-bottom: 10px;
        }

        .button {
            padding: 5px 20px;
            border: none;
            background-color: #0bbfb9;
            border-radius: 3px;
            color: white;
            font-size: 20px;
            display:block;
            position: absolute;
            right: 0px;
        }

        label {
            min-width: 20%;
        }

        .table {
            border-collapse: collapse;
            border: 2px solid grey;
            margin: 40px auto;
            max-width: 60%;
            max-height: 500px;
            overflow: scroll;
        }

        th {
            padding: 10px 20px;
            border-bottom: 2px solid grey;
        }

        td {
            padding: 10px 20px;
            border-bottom: 1px solid grey;
            text-align: justify;
            min-width: 100px;
        }

        .info_table {
            min-width: 400px;
            border-left: 1px solid grey;
        }


        th {
            background-color: #0bbfb9;
            color: white;
        }
    </style>
    <title>Touristbot</title>
</head>
<body>
<h1> Tourist-bot Manager</h1>
<!-- ADD -->
<div class="form_header">Add New</div>
<form method="post" class="form" action="addCity">
    <div class="input_wrapper">
        <label for="name">Name</label>
        <input autocomplete="off" required type="text" class="input" name="name" placeholder="Minsk">
    </div>
    <div class="input_wrapper">
        <label for="info">Info</label>
        <textarea required name="info" class="textarea" rows="7"
                  placeholder="Minsk was founded in 1067..." maxlength="1000"></textarea>
    </div>
    <div class="submit_wrap"><input class="button" type="submit" value="Add"></div>
</form>

<!-- EDIT -->
<div class="form_header">Edit</div>
<form method="post" class="form" action="editCity">
    <div class="input_wrapper">
        <label for="name">Name</label>
        <input autocomplete="off" required type="text" class="input" name="name" placeholder="Minsk">
    </div>
    <div class="input_wrapper">
        <label for="info">Info</label>
        <textarea required name="info" class="textarea" rows="7"
                  placeholder="Minsk wasn't founded in 1067..." maxlength="1000"></textarea>
    </div>
    <div class="submit_wrap"><input class="button" type="submit" value="Edit"></div>
</form>

<!-- DELETE-->
<div class="form_header">Delete</div>
<form method="post" class="form" action="deleteCity">
    <div class="input_wrapper">
        <label for="name">Name</label>
        <input type="text" autocomplete="off" class="input" id="name" placeholder="Minsk" name="name">
    </div>
    <div class="submit_wrap"> <input class="button" type="submit" value="Delete"></div>
</form>

<table class="table">
    <thead>
    <tr>
        <th>City</th>
        <th>Information</th>
    </tr>
    </thead>
    <tbody>
    {{#cities}}
    <tr>
        <td>{{name}}</td>
        <td class="info_table">{{info}}</td>
    </tr>
    {{/cities}}
    </tbody>
</table>

</body>
</html>
